<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">新規会員登録</div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :last_name, "名前（姓）" %><br/>
                  <%= f.text_field :last_name, autocomplete: "family-name", class: "form-control" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :first_name, "名前（名）" %><br/>
                  <%= f.text_field :first_name, autocomplete: "given-name", class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :last_name_kana, "フリガナ（セイ）" %><br/>
                  <%= f.text_field :last_name_kana, class: "form-control" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :first_name_kana, "フリガナ（メイ）" %><br/>
                  <%= f.text_field :first_name_kana, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :postal_code, "郵便番号" %><br/>
              <%= f.text_field :postal_code, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :address, "住所" %><br/>
              <%= f.text_field :address, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :telephone_number, "電話番号" %><br/>
              <%= f.text_field :telephone_number, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :email, "メールアドレス" %><br/>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password, "パスワード" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "パスワード確認" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="text-center">
              <%= f.submit "新規登録", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="text-center mt-3" >
    <h5>既にログイン済みの方は
    <%= link_to "こちら", new_customer_session_path %> からログインしてください</h5>
</div>


