<div class="container mt-5">
  <h1 class="mb-4">予約履歴一覧</h1>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>予約日時</th>
        <th>予約者名</th>
        <th>コース名</th>
        <th>料金</th>
        <th>詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @reservation_details.each do |reservation_detail| %>
        <tr>
          <td><%= reservation_detail.visit_datetime %></td>
          <td><%= reservation_detail.customer_name %></td>
          <td><%= reservation_detail.course_name %></td>
          <td><%= reservation_detail.unit_price %></td>
          <td><%= link_to '詳細', public_reservations_detail_path(reservation_detail), class: 'btn btn-info btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-4">
    <%= paginate @reservation_details %>
  </div>
</div>
