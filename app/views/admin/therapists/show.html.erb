<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <strong>セラピスト詳細</strong>
        </div>
        <div class="card-body">
          <p class="card-text">
            <strong>セラピスト名</strong>
            <%= @therapist.therapist_name %>
          </p>

          <p class="card-text">
            <strong>セラピスト歴</strong>
            <%= @therapist.experience_years %>
          </p>

          <p class="card-text">
            <strong>一言コメント</strong>
            <%= @therapist.introduction %>
          </p>

          <p class="card-text">
            <strong>Image:</strong>
            <%= image_tag @therapist.image, class: "img-fluid" if @therapist.image.attached? %>
          </p>
        </div>
        <div class="card-footer text-center">
          <%= link_to '編集', edit_admin_therapist_path(@therapist), class: 'btn btn-warning' %> |
          <%= link_to '戻る', admin_therapists_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>
