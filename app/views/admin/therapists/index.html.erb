<h1>セラピスト一覧</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Experience Years</th>
      <th>Introduction</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @therapists.each do |therapist| %>
      <tr>
        <td><%= therapist.therapist_name %></td>
        <td><%= therapist.experience_years %></td>
        <td><%= therapist.introduction %></td>
        <td><%= image_tag therapist.image if therapist.image.attached? %></td>
        <td><%= link_to 'Show', admin_therapist_path(therapist) %></td>
        <td><%= link_to 'Edit', edit_admin_therapist_path(therapist) %></td>
        <td><%= link_to 'Destroy', admin_therapist_path(therapist), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規登録', new_admin_therapist_path %>
