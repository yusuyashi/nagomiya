<div class="container mt-5">
  <h1 class="mb-4">口コミ一覧</h1>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>評価</th>
        <th>コメント</th>
        <th>投稿者</th>
        <th>匿名</th>
        <th>管理者コメント</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.rating %></td>
          <td><%= review.comment %></td>
          <td><%= review.customer_id ? "会員: #{review.customer_id}" : "ゲスト: #{review.anonymous_name}" %></td>
          <td><%= review.anonymous_name %></td>
          <td><%= review.admin_comment %></td>
          <td>
            <%= link_to '編集', edit_admin_review_path(review), class: 'btn btn-primary btn-sm mr-2' %> 
            <%= link_to '削除', admin_review_path(review), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm mr-2' %> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'お礼のコメント追加', new_admin_review_path, class: 'btn btn-success mt-3' %>
</div>
