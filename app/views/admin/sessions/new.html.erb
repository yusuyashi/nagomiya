<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">管理者ログイン</div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email, "メールアドレス" %> <!-- ラベルを変更 -->
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
            </div>

            <div class="form-group">
              <%= f.label :password, "パスワード" %> <!-- ラベルを変更 -->
              <%= f.password_field :password, autofocus: true, autocomplete: "password", class: "form-control", required: true %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <div class="form-check">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, class: "form-check-label" %>
                </div>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.submit "ログイン", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "admin/shared/links" %>
